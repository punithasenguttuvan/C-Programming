#include<stdio.h>
int main()
{
	int n,i,a[n];
	printf("Enter the no of elements: ");
	scanf("%d",&n);
	printf("Enter the elements:");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	printf ("The elements are: ",);
	for (i=0;i<n;i++)
	{
		printf("%d",a[i]);
	}
	for (i=0;i<n;i++)
	  if (a[0] < a[i]) 
	  {
      a[0] = a[i];
      }
  printf("\nLargest element = %d", a[0]);
return 0;
}
